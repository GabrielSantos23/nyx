{
  "name": "nyx",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "clean": "node -e \"const fs = require('fs'); ['dist', 'dist-electron'].forEach(dir => fs.rmSync(dir, { recursive: true, force: true }));\"",
    "dev": "vite",
    "build": "npm run clean && vite build",
    "app:dev": "vite",
    "app:build": "npm run build && tsc -p electron/tsconfig.json && electron-builder",
    "dist": "npm run app:build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.2.1",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.4",
    "framer-motion": "^12.34.0",
    "katex": "^0.16.28",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "rimraf": "^6.1.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.3"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.nyx.app",
    "productName": "Nyx",
    "icon": "public/app-icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "native-module/**/*",
      "!**/native-module/target/**",
      "!**/native-module/src/**",
      "!**/native-module/*.log",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
